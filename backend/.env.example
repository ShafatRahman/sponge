# Django
DJANGO_SECRET_KEY=change-me-to-a-random-string
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Supabase Postgres -- use the CONNECTION POOLER URI, not direct connection)
# Go to supabase.com > Settings > Database > Connection string > "Connection pooling"
# Direct connections (port 5432) resolve to IPv6 which Docker cannot reach.
DATABASE_URL=postgresql://postgres.xxxx:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Supabase (get from supabase.com > Settings > API Keys)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_SECRET_KEY=sb_secret_your-secret-key

# Redis (local via Docker Compose, or Upstash in production)
REDIS_URL=redis://localhost:6379/0

# OpenAI (required for Detailed mode only)
OPENAI_API_KEY=sk-...

# Langfuse (optional -- falls back to hardcoded prompts)
# No spaces around =, no quotes around values
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://us.cloud.langfuse.com

# Sentry (leave empty to disable -- recommended for local dev)
SENTRY_DSN=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
